<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_frag"
    app:startDestination="@id/flightFragment">

    <fragment
        android:id="@+id/flightFragment"
        android:name="com.example.panindia.FlightFragment"
        android:label="fragment_flight"
        tools:layout="@layout/fragment_flight" >
        <action
            android:id="@+id/action_flightFragment_to_busFragment"
            app:destination="@id/busFragment" />
    </fragment>
    <fragment
        android:id="@+id/hotelFragment"
        android:name="com.example.panindia.HotelFragment"
        android:label="fragment_hotel"
        tools:layout="@layout/fragment_hotel" />
    <fragment
        android:id="@+id/busFragment"
        android:name="com.example.panindia.BusFragment"
        android:label="fragment_bus"
        tools:layout="@layout/fragment_bus" />
</navigation>