                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:text="Pin Code" />

                            <View
                                android:layout_width="@dimen/view_width"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/mid_color"
                                android:background="@color/seperator" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Enter Pin Code" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:text="District" />

                            <View
                                android:layout_width="@dimen/view_width"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/mid_color"
                                android:background="@color/seperator" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Enter District" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:text="State" />

                            <View
                                android:layout_width="@dimen/view_width"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/mid_color"
                                android:background="@color/seperator" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Select your State" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/residence_shape"
                                android:text="Residence Address same as above" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:text="Residence Address" />

                            <View
                                android:layout_width="@dimen/view_width"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/mid_color"
                                android:background="@color/seperator" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Enter Residence Address" />
